{
  "name": "video-transcriber",
  "version": "1.0.0",
  "description": "A simple Electron application to transcribe and translate video files using OpenAI's Whisper API.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build-ytdlp && electron-builder",
    "setup-icons": "node scripts/convert-icons.js",
    "download-yt-dlp": "node scripts/download-yt-dlp.js",
    "build-ytdlp": "node scripts/build-ytdlp.js",
    "postinstall": "npm run build-ytdlp",
    "verify-build": "node scripts/verify-build.js",
    "test-packaged-ytdlp": "node scripts/test-packaged-ytdlp.js"
  },
  "author": "ELSA, Corp.",
  "license": "ISC",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^4.28.0"
  },
  "build": {
    "appId": "com.elsa.videotranscriber",
    "productName": "Video Transcriber",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "mac": {
      "target": [
        "dir",
        "zip"
      ],
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "ELSA, Corp. (DQ47627WZ6)",
      "extraResources": [
        {
          "from": "node_modules/ffmpeg-static/ffmpeg",
          "to": "ffmpeg"
        },
        {
          "from": "binaries/darwin-yt-dlp",
          "to": "yt-dlp"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico",
      "extraResources": [
        {
          "from": "node_modules/ffmpeg-static/ffmpeg.exe",
          "to": "ffmpeg.exe"
        },
        {
          "from": "binaries/win32-yt-dlp.exe",
          "to": "yt-dlp.exe"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png",
      "extraResources": [
        {
          "from": "node_modules/ffmpeg-static/ffmpeg",
          "to": "ffmpeg"
        },
        {
          "from": "binaries/linux-yt-dlp",
          "to": "yt-dlp"
        }
      ]
    },
    "afterSign": "scripts/notarize.js"
  }
}
